	<body>
   
<form class="form-horizontal" action="/contacts" method="POST">
  <div class="form-group form-group-lg">
    <label class="col-sm-2 control-label" for="formGroupInputLarge">Your e-mail adress</label>
    <div class="col-sm-2">
      <input class="form-control" type="email" name="email" value="<%= @email%>">
    </div>
  </div>
  <div class="form-group form-group-sm">
    <label class="col-sm-2 control-label" for="formGroupInputSmall">Your message</label>
    <div class="col-sm-10">
     <textarea class="form-control" rows="3" name="message"></textarea>
    </div>
	
	 <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Send</button>
    </div>
  </div>
  </div>
  
</form>
	</body>